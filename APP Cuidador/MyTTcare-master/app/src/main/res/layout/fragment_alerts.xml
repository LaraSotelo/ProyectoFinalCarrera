<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Alerts"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:hint="Situaciones de alerta recientes"
            android:textColorHint="@color/edges"
            android:textSize="30dp"
            android:textStyle="bold|italic"
            android:layout_marginBottom="20dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/alert"
                android:layout_alignParentStart="true"
                android:background="@color/background"
                android:layout_marginLeft="50dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColorHint="@color/black"
                android:textSize="25dp"
                android:hint="Botón de pánico"
                android:textStyle="bold|italic"
                android:layout_alignParentEnd="true"
                android:foregroundGravity="center"
                android:layout_marginRight="90dp"
                android:paddingTop="5dp"/>
        </RelativeLayout>
        <!--AL PRESIONAR EL BOTÓN ACCIONES
        SE REDIRIGE AL ACTIVITY ALERT-DETAILS-->

        <include
            android:id="@+id/include_alertsModule1"
            layout="@layout/alerts_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/layoutAddUsers" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/include_alertsModule1"
            android:layout_marginTop="20dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/zone"
                android:layout_alignParentStart="true"
                android:background="@color/background"
                android:layout_marginLeft="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColorHint="@color/black"
                android:textSize="25dp"
                android:hint="Salida de área segura"
                android:textStyle="bold|italic"
                android:layout_alignParentEnd="true"
                android:foregroundGravity="center"
                android:layout_marginRight="50dp"
                android:paddingTop="5dp"/>
        </RelativeLayout>

        <include
            android:id="@+id/include_alertsModule"
            layout="@layout/alerts_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/layoutAddUsers" />


    </LinearLayout>

</FrameLayout>



