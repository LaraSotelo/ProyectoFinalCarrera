<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PatientCalendar"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:hint="Nombre (paciente)"
                android:textColorHint="@color/black"
                android:textSize="30dp"
                android:textStyle="bold|italic" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/info"
                android:layout_alignParentEnd="true"
                android:background="@color/background"
                android:layout_marginTop="5dp"/>

        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:hint="Agenda del mes"
            android:textColorHint="@color/edges"
            android:textSize="30dp"
            android:textStyle="bold|italic"
            android:layout_marginLeft="25dp"/>

        <CalendarView
            android:id="@+id/dateView"
            android:layout_width="wrap_content"
            android:layout_height="308dp"
            android:layout_gravity="center_horizontal"
            android:datePickerMode="calendar" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/edittext_background">

            <TextView
                android:id="@+id/tv_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Evento"
                android:textColorHint="@color/edges"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_marginLeft="15dp"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Día"
                android:textSize="23dp"
                android:textStyle="bold"
                android:layout_below="@id/tv_event"
                android:layout_alignParentStart="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp" />
            <TextView
                android:id="@+id/tv_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hora"
                android:textSize="23dp"
                android:textStyle="bold"
                android:layout_below="@id/tv_event"
                android:layout_toEndOf="@id/tv_date"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp" />

            <ImageButton
                android:id="@+id/btn_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/edit"
                android:layout_marginRight="70dp"
                android:layout_alignParentEnd="true"
                android:background="@color/background"
                android:layout_below="@id/tv_event"
                android:contentDescription="Botón de editar"/>

            <ImageButton
                android:id="@+id/btn_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/delete"
                android:layout_alignParentEnd="true"
                android:background="@color/background"
                android:layout_below="@id/tv_event"
                android:layout_marginBottom="5dp"
                android:contentDescription="Botón de eliminar"/>
        </RelativeLayout>

        <Button
            android:id="@+id/btn_aditMedicines"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/buttons"
            android:hint="Agregar cita"
            android:textColorHint="@color/white"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/buttons"
                android:hint="Guardar"
                android:textColorHint="@color/white"
                android:textSize="25sp"
                android:layout_alignParentStart="true"/>
            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Cancelar"
                android:textSize="25sp"
                android:backgroundTint="@color/buttons"
                android:textColorHint="@color/white"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </LinearLayout>

</FrameLayout>



